general {
        colors = true
        interval = 5
}

order += "ipv6"
order += "wireless _first_"
#order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "cpu_temperature 1"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip "
        format_down = "W: down"
}

#ethernet _first_ {
#        format_up = "E: %ip (%speed)"
#        format_down = "E: down"
#}
battery all {
   format  = " BAT:  %status %percentage %remaining "
   format_down = "No Battery"
   status_chr = "âš¡ CHR"
   status_bat = "ðŸ”‹ BAT"
   status_unk = "? UNK"
   status_full = "â˜» FULL"
   status_idle = "â˜» IDLE"
   path = "/sys/class/power_supply/BAT%d/uevent"
   last_full_capacity = true
   low_threshold = 15
}


disk "/" {
        format = " / %avail Free "
}

memory {
        format = "MEM: [%used | %available] "
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

load { 
   separator = false 
   format = " [ loadavg: %1min %5min %15min ] "
}

cpu_temperature 1 {
   format = " T: %degrees Â°C "
   path = "/sys/class/thermal/thermal_zone1/temp"
   max_threshold = 60
}


tztime local {
        format = " [ %Y-%m-%d %H:%M:%S ] "
}
