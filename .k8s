alias kpo='kubectl get pods'
alias kgs='kubectl get svc'
alias kgn='kubectl get node'
alias kdp='kubectl describe pod'
alias kds='kubectl describe svc'
alias kdn='kubectl describe node'
alias kdi='kubectl describe ingress'
alias klog='kubectl logs -f'
alias kap='kubectl apply -f'
alias kcl='kubectl config get-contexts'
alias kcs='kubectl config use-context'
alias kcn='kubectl config set-context --current --namespace'
alias ksd0='kubectl scale deploy --replicas 0'
alias ksd1='kubectl scale deploy --replicas 1'
alias kss0='kubectl scale sts --replicas 0'
alias kss1='kubectl scale sts --replicas 1'
alias king='kubectl get ingress'
alias kexec='http_proxy=http://127.0.0.1:9090 https_proxy=http://127.0.0.1:9090 kubectl exec -it'
alias wkpo='watch -n 4 kubectl get pods'
alias wkall='watch -n 12 kubectl get all'
alias wking='watch -n 6 kubectl get ingress -o yaml'
alias wgit='watch -n 4 "kubectl get pods -A -o wide | egrep -v \"(prometheus|kube-system)\""'
alias wtn='watch -n 10 "kubectl top node"'
alias wtp='watch -n 10 "kubectl top pod --containers"'
alias wtpa='watch -n 10 "kubectl top pod --containers -A | egrep -v \"(prometheus|kube-system)\""'
alias wtpc='watch -n 6 "kubectl top pod --containers -A | sort -nrk 4 | head -n 40"'
alias wtpm='watch -n 6 "kubectl top pod --containers -A | sed -e 's/Mi//' | sort -nrk 5 | head -n 40"'
